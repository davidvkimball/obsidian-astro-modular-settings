{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "exclude": [
    "node_modules",
    "main.js",
    "esbuild.config.mjs",
    "version-bump.mjs"
  ]
}
